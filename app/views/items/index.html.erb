<h1>Items</h1>
<table>
<tbody>
<% @items.each do |item| %>

<tr>
	<td><%= item.name %></td>
	<td><%= link_to 'show', item_path(item) %></td>
	<td><%= link_to 'edit', edit_item_path(item) %></td>
	<td><%= link_to 'destroy', item, method: :delete %></td>
</tr>

<% end %>
</tbody>
</table>
<h2><%= link_to 'add a new item', new_item_path %> </h2>